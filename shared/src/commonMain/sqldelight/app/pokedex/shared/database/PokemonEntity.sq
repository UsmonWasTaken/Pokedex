CREATE TABLE IF NOT EXISTS pokemonEntity (
  id INTEGER NOT NULL PRIMARY KEY,
  name TEXT NOT NULL,
  page INTEGER NOT NULL
);

upsertPokemon:
INSERT OR REPLACE INTO pokemonEntity(id, name, page)
VALUES ?;

clear:
DELETE
FROM pokemonEntity;

getPokemonsCount:
SELECT count(*) FROM pokemonEntity;

getPokemons:
SELECT *
FROM pokemonEntity
LIMIT :limit OFFSET :offset;